pipeline {
    agent any

    tools {
        maven 'M3'     // Name of Maven from Jenkins global tools
        jdk 'JDK24'    // Name of JDK from Jenkins global tools
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/keerthiga2905/jenkinslab.git'
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean package -DskipTests=false'
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
            }
        }
    }
}
