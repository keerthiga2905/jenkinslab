pipeline {
    agent any

    tools {
        maven 'M3'     // Maven from Jenkins Global Tool Config
        jdk 'JDK21'    // JDK from Jenkins Global Tool Config
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/keerthiga2905/jenkinslab.git'
            }
        }

        stage('Build') {
            steps {
                // Jenkins will prepend Maven & JDK automatically
                bat 'mvn -version'
                bat 'mvn clean package -DskipTests=false'
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
            }
        }
    }
}
